{
  "name": "herald-kent-amolong-portfolio",
  "version": "1.2.0",
  "description": "An interactive, animated portfolio website with advanced CSS and JavaScript features",
  "author": "Herald Kent Amolong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://portfolio-amolong.vercel.app/"
  },
  "keywords": [
    "portfolio",
    "interactive",
    "animations",
    "particles",
    "orbit-animation",
    "responsive",
    "modern-ui",
    "css3",
    "html5",
    "javascript",
    "glassmorphism"
  ],

  "files": [
    "index.html",
    "styles.css",
    "script.js",
    "particles.js",
    "orbit.js",
    "js/scroll-animations.js",
    "js/tech-visual.js",
    "README.md"
  ],

  "features": [
    "Responsive Design",
    "Interactive Tech Orbit Visualization",
    "Particle Background Effects",
    "Horizontal Scrolling Project Gallery",
    "Animated Text and Element Transitions",
    "Glassmorphism UI Elements",
    "Dynamic Content Loading",
    "Performance Optimized Animations",
    "SEO Friendly Structure",
    "Accessibility Support"
  ],
  "browser_support": {
    "chrome": ">=92",
    "firefox": ">=90",
    "safari": ">=15",
    "edge": ">=92"
  },
  "dependencies": {
    "fonts": "Google Fonts (Inter)",
    "icons": "Font Awesome 6.0",
    "external": [],
    "dev": {
      "five-server": "^0.1.5"
    }
  },
  "color_scheme": {
    "primary": "#6366f1",
    "primary-dark": "#4f46e5",
    "primary-light": "#a5b4fc",
    "accent": "#06b6d4",
    "accent-dark": "#0891b2",
    "accent-cyan": "#22d3ee",
    "accent-emerald": "#10b981",
    "accent-violet": "#8b5cf6",
    "background": "#f7f8fa",
    "background-dark": "#0f172a",
    "text-primary": "#1f2937",
    "text-secondary": "#6b7280"
  },
  "animations": {
    "orbit": {
      "duration": "25-35s",
      "timing": "linear",
      "iteration": "infinite"
    },
    "particles": {
      "count": "variable",
      "speed": "0.5-3",
      "opacity": "0.3-0.8"
    },
    "typing": {
      "speed": "3.5s",
      "method": "steps(30, end)"
    }
  },
  "customization": {
    "colors": "Update CSS variables in styles.css",
    "content": "Modify content in index.html",
    "animations": "Adjust parameters in particles.js and orbit.js",
    "layout": "Modify grid settings and responsive breakpoints in styles.css",
    "projects": "Add or update project cards in the horizontal scroll section"
  },
  "scripts": {
    "start": "five-server",
    "deploy": "echo 'Add your deployment script here'"
  }
}